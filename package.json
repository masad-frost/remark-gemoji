{
  "name": "remark-gemoji",
  "version": "4.0.1",
  "description": "Gemoji short-code support in remark",
  "license": "MIT",
  "keywords": [
    "github",
    "gemoji",
    "emoji",
    "short-code",
    "shortcode",
    "remark"
  ],
  "repository": "remarkjs/remark-gemoji",
  "bugs": "https://github.com/remarkjs/remark-gemoji/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "gemoji": "^4.1.0"
  },
  "devDependencies": {
    "browserify": "^14.0.0",
    "nyc": "^11.0.0",
    "remark-cli": "^4.0.0",
    "remark-parse": "^4.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.4.3",
    "unified": "^6.1.6",
    "xo": "^0.18.0"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-bundle": "browserify . -s remarkGemoji > remark-gemoji.js",
    "build-mangle": "browserify . -s remarkGemoji -p tinyify > remark-gemoji.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "esnext": false,
    "ignores": [
      "remark-gemoji.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
